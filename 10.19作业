//2.(p1)
#include <stdio.h>
int main()
{
    int a,b,sum;
    scanf("%d%d",&a,&b);
    sum=a+b;
    printf("%d",sum);
    return 0;
}
//3.(p29)
#include <stdio.h>
int main()
{
    int score;
    scanf("%d",&score);
    if(score>=86){
        printf("VERY GOOD");
    }else if(score>=60&&score<=85){
        printf("GOOD");
    }else{
        printf("BAD");
    }
    return 0;
}
//4.(p11)
#include <stdio.h>
int main()
{
    int n,i=1,a=1,b=0;
    scanf("%d",&n);
    if(n>=1&&n<=10){
        while(i<=n){
            a*=i;
            i++;
            b=b+a;
        }
    }
    printf("%d",b);
    return 0;
}
//5.(p221)目前能力不足,以后补上
//6.(p512)
#include <stdio.h>
#include <math.h>
int main()
{
    int n,a,b,c,d=0,e=0;
    scanf("%d",&n);
    c=n;
    while(n>=0){
        a=n-c;
        b=n-a;
        e++;
        d++;
        c--;
        if(d<=n/2+1){
            printf("%d=%d+%d\n",n,a,b);
        }
        if(c==0){
            n=-1;
        }
    }
	return 0; 
}
